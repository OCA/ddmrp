<odoo>

    <record model="ir.ui.view" id="ddmrp_simulation_form_view">
        <field name="name">ddmrp.simulation.form (in ddmrp_simulation)</field>
        <field name="model">ddmrp.simulation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="run_simulation" string="Run Simulation" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                    <button name="button_create_stock_buffers" string="Create Stock Buffers" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                    <button name="action_open_product_lines" string="Open/Import Product Lines" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                    <button name="action_open_on_hand_demand_lines" string="Open/Import On Hand / Inventory" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                    <button name="action_compute_results" string="Compute Results" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="Simulation Products" type="object" name="action_view_related_simulation_lines" class="oe_stat_button" icon="fa-exchange" context="{'no_reference': True}"/>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group name="main">
                        <group name="main_left">
                            <field name="simulation_type"/>
                        </group>
                        <group name="main_right">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Input Data">
                            <group>
                                <separator string="Product Domain"/>
                                <field name="product_domain" nolabel="true" widget="ace" options="{'mode': 'python'}"/>
                                <group>
                                    <button name="button_search_product" type="object" string="Search"/>
                                    <button name="button_delete_products" type="object" string="Delete"/>
                                    <button name="button_import_product" type="object" string="Import"/>
                                </group>
                                <group>
                                    <field name="product_found_count"/>
                                    <field name="product_imported_count"/>
                                </group>
                            </group>
                            <field name="simulation_product_ids">
                                <tree editable="top">
                                    <field name="simulation_id" invisible="1"/>
                                    <field name="product_tmpl_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="reference"/>
                                    <field name="name"/>
                                    <field name="standard_price"/>
                                    <field name="seller_id" context="{'default_product_id': product_id, 'default_product_tmpl_id': product_tmpl_id}"/>
                                    <field name="lead_time"/>
                                    <field name="replenish_method"/>
                                    <field name="item_type"/>
                                    <field name="lead_time_id"/>
                                    <field name="variability_id"/>
                                    <field name="stock_buffer_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="On Hand / Demand Lines">
                            <button name="button_import_lines" type="object" string="Import Products and On Hand"/>
                            <button name="button_import_demand" type="object" string="Import Demand"/>
                            <button name="button_delete_similation_lines" type="object" string="Delete Lines"/>
                            <field name="simulation_line_ids">
                                <tree>
                                    <field name="simulation_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="date"/>
                                    <field name="on_hand"/>
                                    <field name="demand"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Stock Buffers">
                            <field name="stock_buffers_ids">
                                <tree editable="bottom">
                                    <field name="company_id" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                    <field name="auto_procure_option" invisible="1"/>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_uom"/>
                                    <field name="buffer_profile_id"/>
                                    <field name="adu_calculation_method"/>
                                    <field name="adu_calculation_method"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Simulation Results">
                            <group>
                                <group>
                                    <field name="initial_inventory_id"/>
                                </group>
                                <group>
                                    <field name="result_ids" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Remote Configuration" attrs="{'invisible': [('simulation_type', '!=', 'remote')]}">
                            <group name="details">
                                <group name="details_remote" attrs="{'invisible': [('simulation_type', '!=', 'remote')]}">
                                    <field name="connected" invisible="1"/>
                                    <field name="remote_address"/>
                                    <field name="remote_port"/>
                                    <field name="remote_protocol"/>
                                    <field name="remote_database_list" attrs="{'invisible': [('connected', '!=', True)]}"/>
                                    <button name="test_connection" type="object" string="Test Connection to continue" attrs="{'invisible': [('connected', '=', True)]}"/>
                                </group>
                                <group name="details_remote" attrs="{'invisible': [('simulation_type', '!=', 'remote')]}">
                                    <field name="remote_database" attrs="{'invisible': [('connected', '!=', True)]}"/>
                                    <field name="remote_user" attrs="{'invisible': [('connected', '!=', True)]}"/>
                                    <field name="remote_password" password="True" attrs="{'invisible': [('connected', '!=', True)]}"/>
                                    <field name="credentials"/>
                                    <button name="test_credentials" type="object" string="Test Credentials" attrs="{'invisible': [('connected', '!=', True)]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ddmrp_simulation_search_view">
        <field name="name">ddmrp.simulation.search (in ddmrp_simulation)</field>
        <field name="model">ddmrp.simulation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ddmrp_simulation_tree_view">
        <field name="name">ddmrp.simulation.tree (in ddmrp_simulation)</field>
        <field name="model">ddmrp.simulation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="simulation_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ddmrp_simulation_act_window">
        <field name="name">DDMRP Simulation</field>
        <field name="res_model">ddmrp.simulation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        name="DDMRP Simulation"
        parent="stock.menu_warehouse_report"
        action="ddmrp_simulation_act_window"
        id="ddmrp_simulation_menu"
    />

</odoo>
