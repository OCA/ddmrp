<odoo>
    <record id="view_warehouse_orderpoint_form" model="ir.ui.view">
        <field
            name="name"
        >stock.warehouse.orderpoint.form - ddmrp_product_replace</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="ddmrp.view_warehouse_orderpoint_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    name="product_replacement"
                    string="Product Replacement"
                    attrs="{'invisible': [('demand_product_ids','=',[])]}"
                    groups="stock.group_stock_manager"
                >
                    <group>
                        <field name="demand_product_ids" widget="many2many_tags" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
